<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/showZonesBtn"
            android:layout_width="275dp"
            android:layout_height="42dp"
            android:layout_marginStart="51dp"
            android:layout_marginEnd="43dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FF9800"
            android:text="@string/showZonesBtn"
            android:textSize="18dp"
            app:cornerRadius="5dp"
            app:layout_constraintBottom_toTopOf="@+id/createTrophyBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2" />

        <Button
            android:id="@+id/createTrophyBtn"
            android:layout_width="275dp"
            android:layout_height="42dp"
            android:layout_marginStart="51dp"
            android:layout_marginEnd="43dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FF9800"
            android:text="@string/createTrophyBtn"
            android:textSize="18dp"
            app:cornerRadius="5dp"
            app:layout_constraintBottom_toTopOf="@+id/showTrophiesBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2" />

        <Button
            android:id="@+id/showTrophiesBtn"
            android:layout_width="275dp"
            android:layout_height="42dp"
            android:layout_marginStart="51dp"
            android:layout_marginEnd="43dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#FF9800"
            android:text="@string/showTrophiesBtn"
            android:textSize="18dp"
            app:cornerRadius="5dp"
            app:layout_constraintBottom_toTopOf="@+id/selectLanguage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2" />

        <Spinner
            android:id="@+id/languageSpinner"
            android:layout_width="175dp"
            android:layout_height="47dp"
            android:layout_marginEnd="128dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/createZoneBtn"
            android:layout_width="275dp"
            android:layout_height="42dp"
            android:layout_marginStart="51dp"
            android:layout_marginEnd="43dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FF9800"
            android:text="@string/createZoneBtn"
            android:textSize="18dp"
            app:cornerRadius="5dp"
            app:layout_constraintBottom_toTopOf="@+id/showZonesBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2" />

        <TextView
            android:id="@+id/selectLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="180dp"
            android:text="@string/selectLanguage"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/languageSpinner"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/welcomeHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="59dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="19dp"
            android:text="@string/welcomeHome"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/createZoneBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="346dp"
            android:layout_height="297dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="57dp"
            android:layout_marginBottom="57dp"
            android:src="@drawable/rod_rockslogo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>